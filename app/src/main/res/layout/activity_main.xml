<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_list_item"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_medium_16"
            android:gravity="center_vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_edit_text_phone"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/size_small_24"/>
    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">
    </view>
</LinearLayout>